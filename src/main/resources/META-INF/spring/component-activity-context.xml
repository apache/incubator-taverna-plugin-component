	</osgi:service-properties>
	<bean
		class="net.sf.taverna.t2.component.ui.preference.ComponentPreferenceUIFactory">
		<property name="configPanel" ref="preferencePanel" />
		<property name="preferences" ref="prefs" />
	</bean>
</osgi:service>

